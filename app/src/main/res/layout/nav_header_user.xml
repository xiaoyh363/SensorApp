<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/nav_header_padding_vertical"
        android:paddingBottom="@dimen/nav_header_padding_vertical"
        android:paddingStart="@dimen/nav_header_padding_horizontal"
        android:paddingEnd="@dimen/nav_header_padding_horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_vertical_spacing"/>

    <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_username_default"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>
