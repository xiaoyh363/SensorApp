<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="序列化"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/write"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deserializable"/>
    <Button
            android:text="反序列化"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deserializable"
            app:layout_constraintTop_toTopOf="@+id/write"
            app:layout_constraintBottom_toBottomOf="@+id/write"
            app:layout_constraintStart_toEndOf="@+id/write"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>